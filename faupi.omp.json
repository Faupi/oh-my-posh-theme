{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#000000",
          "background": "#1FB0FF",
          "template": " {{ .FormattedMs }} ",
          "properties": {
            "style": "austin",
            "threshold": 321
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#F8F8F0",
          "background": "#FF1F1F",
          "template": "{{ if gt .Code 0 }} {{ .Code }} {{ end }}"
        },
        {
          "type": "os",
          "style": "plain",
          "foreground": "#777777",
          "background": "#444444",
          "template": " {{ if .WSL }}\uf68e {{ end }}{{ if .Root }}\uf0e7{{ end }}{{.Icon}}"
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#777777",
          "background": "#444444",
          "template": " {{ if .SSHSession }}\uf817 {{ end }}{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#F8F8F0",
          "background": "#777777",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_icon": "\u2026",
            "style": "mixed"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#F8F8F0",
          "background": "#F54C28",
          "template": " {{ .HEAD }} ",
          "properties": {
            "branch_icon": "\ue725 ",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "fetch_status": false,
            "fetch_upstream_icon": false,
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf594 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 "
          }
        },
        {
          "type": "dotnet",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#7014eb",
          "template": " \ue77f ",
          "properties": {
            "fetch_version": false
          }
        },
        {
          "type": "go",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#7FD5EA",
          "template": " \ufcd1 ",
          "properties": {
            "fetch_version": false
          }
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "#100e23",
          "background": "#906cff",
          "template": " \ue235 ",
          "properties": {
            "fetch_version": false
          }
        },
        {
          "type": "rust",
          "style": "plain",
          "foreground": "#193549",
          "background": "#99908a",
          "template": " \ue7a8 ",
          "properties": {
            "fetch_version": false
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#007ACC",
          "template": "{{ .Name }} ",
          "properties": {
            "mapped_shell_names": {
              "bash": "$",
              "cmd": ">",
              "fish": "~>",
              "lua": ">",
              "nu": ":)",
              "pwsh": "\u276f",
              "shell": "\u276f",
              "zsh": "%"
            }
          }
        }
      ],
      "newline": true
    }
  ]
}
